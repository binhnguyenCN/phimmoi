{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"],
  "types": ["node", "jest"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES6",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-native",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
